# ==================== APPLICATION ====================
APP_NAME="XenoraSec"
DEBUG=False

# ==================== DATABASE ====================
DATABASE_URL="sqlite+aiosqlite:///./scans.db"
# For production with Postgres/Supabase:
# DATABASE_URL="postgresql+asyncpg://user:pass@host:5432/dbname"

# ==================== SCANNING ====================
MAX_CONCURRENT_SCANS=3
GLOBAL_SCAN_TIMEOUT=600

# ==================== SECURITY ====================
ALLOW_LOCALHOST_SCANNING=True
ALLOW_PRIVATE_IP_SCANNING=False

# CORS - Comma-separated list of allowed origins for production
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# Leave commented for development (uses localhost:5173 by default)
# ALLOWED_ORIGINS=https://yourdomain.com

# ==================== RATE LIMITING ====================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=10

# ==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_FORMAT=structured

# ==================== AI RISK SCORING ====================
# Optional: Add any AI provider keys here if needed
# GROQ_API_KEY=your_key_here
